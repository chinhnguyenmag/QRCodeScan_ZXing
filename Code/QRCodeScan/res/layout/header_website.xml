<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="45dp"
    android:background="@color/Orange"
    android:padding="5dp" >

    <TextView
        android:id="@+id/header_website_tv_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/header_website_layout_share"
        android:layout_toRightOf="@+id/header_website_ib_back"
        android:ellipsize="marquee"
        android:gravity="center"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/White" />

    <LinearLayout
        android:id="@+id/header_website_ib_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@drawable/button_forcus_browser"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="onClick_Back"
        android:padding="5dp" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="@color/White" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/header_website_layout_share"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:gravity="center_vertical|right"
        android:onClick="onClick_Share" >

        <ImageButton
            android:id="@+id/header_website_ibt_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_history"
            android:onClick="onClick_Share" />
    </LinearLayout>

</RelativeLayout>